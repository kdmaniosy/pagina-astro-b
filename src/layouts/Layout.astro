<style>
	html, body{
		padding: 0;
		margin: 0;
		background: rgb(192, 189, 189);
	}
	header{
		height: 80px;
		background: #e2d523;
		padding-top: 12px;
	}
	header img{
		width: 120px;
	}
	header input{
		box-sizing: border-box;
		display: inline;
		width: 80%;
		padding: 10px 8px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		border: none;
		/* border: 1px solid rgb(223, 220, 220); */
		outline: none;
		height: 36px;
	}
	header button{
		display: inline;
		width: 32px;
		border: none;
		background: white;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		height: 36px;
	}
	.input{
		display: flex;
		align-items: center;
	}

